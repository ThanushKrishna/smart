// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ROLE {
  USER
  ADMIN
}

enum GENDER {
  MALE
  FEMALE
}

type ADDRESS {
  street String?
  city   String?
  state  String?
  zip    String?
}

 model app_user{
		userid			String  @id @default(auto()) @map("_id") @db.ObjectId
		emailid			String	@unique
		password		String
		firstname		String?
		lastname		String?
    gender			GENDER?
		address			ADDRESS?
		profile_pic Int?
		mobile			Int? @unique
		role			  ROLE @default(USER)
		createdAt  	DateTime   @default(now())
		updatedAt		DateTime   @updatedAt

}