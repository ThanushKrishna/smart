// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ROLE {
  USER
  ADMIN
}

enum GENDER {
  MALE
  FEMALE
}

type ADDRESS {
  street String?
  city   String?
  state  String?
  zip    String?
}

model app_user {
  userid      String   @id @default(auto()) @map("_id") @db.ObjectId
  emailid     String   @unique
  password    String
  firstname   String?
  lastname    String?
  gender      GENDER?
  address     ADDRESS?
  profile_pic String?
  mobile      String?  @unique
  role        ROLE     @default(USER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model user_data {
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  data_owner_id         String    @db.ObjectId
  Vehicle_No            String    @unique
  RC_No                 String?
  Registered_Date       DateTime?
  Owner                 String?
  Owner_dob             DateTime?
  Ownership_type        String?
  Vehicle_type          String?
  Year_of_manufacuring  DateTime?
  GVW                   String?
  Chasis_No             String?
  Engine_No             String?
  FC_due_Date           DateTime?
  tax_due_Date          DateTime?
  Vehicle_color         String?
  Vehice_norms          String?
  Address               String?
  CC                    String?
  Make                  String?
  Model                 String?
  Insurance_provider    String?
  Insurance_dueDate     DateTime?
  Policy_No             String?
  Permit_No             String?
  Permit_category       String?
  Mobile_No1            String?
  Mobile_No2            String?
  Email_id              String?
  Adhar_No              String?
  Adhar_doc             String?
  PanCard_No            String?
  Pan_doc               String?
  Nominee               String?
  Nominee_dob           DateTime?
  Emission_dueDate      DateTime?
  Fuel_type             String?
  Hypothecation_bank    String?
  Hypothecation_city    String?
  RTO                   String?
  Referred_by           String?
  Comments              String?
  Customer_type         String?
  Martial_status        String?
  TP_Insurance_provider String?
  TP_dueDate            DateTime?
  GST_No                String?
  Insurance_type        String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

model VEHICLE_COLOR {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  data_owner_id String @db.ObjectId
  value         String @unique
}

model VEHICE_NORMS {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  data_owner_id String @db.ObjectId
  value         String @unique
}

model CC {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  data_owner_id String @db.ObjectId
  value         String @unique
}

model MAKE {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  data_owner_id String @db.ObjectId
  value         String @unique
}

model MODEL {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  data_owner_id String @db.ObjectId
  value         String @unique
}

model INSURANCE_PROVIDER {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  data_owner_id String @db.ObjectId
  value         String @unique
}

model PERMIT_CATEGORY {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  data_owner_id String @db.ObjectId
  value         String @unique
}

model TP_INSURANCE_PROVIDER {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  data_owner_id String @db.ObjectId
  value         String @unique
}
